<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="hello.mapper.CommentMapper" >
    <!--    result maps     -->
    <resultMap id="CommentResultMap" type="hello.model.Comment" >
        <id column="id" property="id"  />
        <result column="content" property="content" />
        <result column="created" property="created" />
        <result column="post_id" property="post.id" />
    </resultMap>

    <insert id="saveComment" parameterType="hello.model.Comment">
        INSERT INTO comment
        (
        content, created, post_id
        )
        VALUES
        (
        #{content}, #{created}, #{post.id}
        )
    </insert>
</mapper>